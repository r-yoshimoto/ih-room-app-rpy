<form class="col-md-6 offset-md-3" id="form" action="/rooms/add" method="POST" enctype="multipart/form-data">
<h1>Add your room</h1>

{{#if msgError}}
      <div class="alert alert-danger">{{ msgError }}</div>
    {{/if}}
    
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text">Upload your room picture</span>
  </div>
  <div class="custom-file">
    <input name="photo" type="file" class="custom-file-input" id="inputGroupFile01">
    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
  </div>
</div>

  <div class="form-group">
    <label for="name">Name your room</label>
    <input name="name" type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Enter room name">
  </div>

  <div class="form-group">
    <label for="description">Describe your room</label>
    <br><textarea name="description" class="form-control" placeholder="Be creative!"></textarea>
  </div>

<label>Search Address</label>
<input type="text" name="address" id="address">
<a href="#" class="btn btn-dark"  id="find">Find</a>
<div id="map"></div>

  <input type="hidden" name="latitude" placeholder="latitude" id="latitude" >
  <input type="hidden" name="longitude" placeholder="longitude" id="longitude">





  <button class="btn btn-primary">Submit</button>
</form>

